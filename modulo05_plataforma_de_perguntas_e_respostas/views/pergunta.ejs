<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<div class="container">
    <br/>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>

    <form method="POST" action="/responder-pergunta">
        <label for="corpo">Responder:</label>
        <textarea name="corpo" id="corpo" placeholder="Digite aqui a sua resposta:" class="form-control" required></textarea>
        <input type="hidden" name="pergunta" class="form-control" value="<%= pergunta.id %>" required>
        <br/>
        <button type="submit" class="btn btn-primary">Enviar Resposta</button>
    </form>
    <hr>
    <br/>
    <h3>Respostas</h3>
    <br>

    <%  if( respostas.length > 0 ) { %>
        <%  respostas.forEach(resposta => { %>
                <br/>
                <div class="card">
                    <div class="card-body">
                        <p style="margin-bottom: 0rem;"><%= resposta.corpo %></p>   
                    </div>
                </div>
    <%      }); 
        } else { 
    %>    
            <p>Nenhuma resposta encontrada!</p>
    <%  } %>
</div>
    

<%- include('./partials/footer.ejs') %>