<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>


    <div class="container">
        <br/>
        <h1>Perguntas</h1>
        <br/>
        <a href="/perguntar" class="btn btn-success">Nova Pergunta</a>
        <br/>
        <hr/>
    <%  if( listaPerguntas.length > 0 ) { 
            listaPerguntas.forEach(pergunta => { %>
            <br/>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" href="/pergunta/<%=pergunta.id%>">Responder</a>
                </div>
            </div>
    <%      }); 
        } else { 
    %>    
            <p>Nenhuma pergunta encontrada!</p>
    <%  } %>

    </div>

    <br>

    <footer style="background-color: #343a40; color: #fff; padding: 35px 15px; text-align: center; margin-top: 20px;">
        <span>Desenvolvido durante o curso de Node por Leonardo Tavares - 2023</span>
    </footer>
    

<%- include('./partials/footer.ejs') %>