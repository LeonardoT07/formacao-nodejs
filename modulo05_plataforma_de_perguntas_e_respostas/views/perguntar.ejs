<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<div class="container" id="formulario-pergunta">
    <div class="card">
        <div class="card-header">
            <h3>Realizar Pergunta</h3>
        </div>

        <div class="card-body">
            <form method="POST" action="/salvar-pergunta">
                <label for="titulo">Título</label>
                <input type="text" placeholder="Título" class="form-control" name="titulo" required>
                <br/>
                <label for="descricao">Descrição</label>
                <textarea name="descricao" id="descricao" placeholder="Descreva sua pergunta aqui" class="form-control" required></textarea>
                <br/>
                <button type="submit" class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
</div>

